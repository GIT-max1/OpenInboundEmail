{
  "name": "inbound-mail-monorepo",
  "private": true,
  "workspaces": [
    "apps/server",
    "apps/web"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "npm --workspace apps/server run dev",
    "dev:web": "npm --workspace apps/web run dev",
    "build": "npm-run-all --print-name build:*",
  "start:prod": "npm run build && npm --workspace apps/web run build && PANEL_STATIC_DIR=apps/web/dist npm --workspace apps/server run start",
    "build:server": "npm --workspace apps/server run build",
    "build:web": "npm --workspace apps/web run build",
    "start": "npm --workspace apps/server run start"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/mailparser": "^3.4.6",
    "@types/node-cron": "^3.0.11",
    "@types/smtp-server": "^3.5.12",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "mailauth": "^4.9.4"
  }
}
